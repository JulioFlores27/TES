<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    android:isScrollContainer="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Crear Usuario"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_gravity="center"/>
    <EditText
        android:id="@+id/nombredelpadre"
        android:layout_height="wrap_content"
        android:hint="Nombre del Padre (Tutor)"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:textColorHint="@color/colorAccent"
        android:background="@drawable/borde_estilo"
        android:layout_gravity="center"
        android:inputType="textPersonName"
        tools:targetApi="o"/>

    <EditText
        android:id="@+id/apellidos"
        android:layout_height="wrap_content"
        android:hint="Apellidos"
        tools:ignore="HardcodedText"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:textColorHint="@color/colorAccent"
        android:background="@drawable/borde_estilo"
        android:layout_gravity="center"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/numerotelefonico"
        android:layout_height="wrap_content"
        android:hint="Numero Telef칩nico"
        tools:ignore="HardcodedText"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:textColorHint="@color/colorAccent"
        android:background="@drawable/borde_estilo"
        android:layout_gravity="center"
        android:inputType="phone" />

    <EditText
        android:id="@+id/email"
        android:layout_height="wrap_content"
        android:hint="Correo Electr칩nico"
        tools:ignore="HardcodedText"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:textColorHint="@color/colorAccent"
        android:background="@drawable/borde_estilo"
        android:layout_gravity="center"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/contrasena"
        android:layout_height="wrap_content"
        android:hint="Contrase침a"
        tools:ignore="HardcodedText"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:textColorHint="@color/colorAccent"
        android:background="@drawable/borde_estilo"
        android:layout_gravity="center"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/nombreescuela"
        android:layout_height="wrap_content"
        android:hint="Nombre del Escuela (Instituci칩n)"
        tools:ignore="HardcodedText"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:textColorHint="@color/colorAccent"
        android:background="@drawable/borde_estilo"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/nombrestudiante"
        android:layout_height="wrap_content"
        android:hint="Nombre del Estudiante"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:textColorHint="@color/colorAccent"
        android:background="@drawable/borde_estilo"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/regresar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            tools:ignore="HardcodedText"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            tools:targetApi="lollipop"/>
    <Button
        android:id="@+id/r2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar"
        tools:ignore="HardcodedText"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        tools:targetApi="lollipop"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>